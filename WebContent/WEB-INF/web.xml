<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>LeaveSystem</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>StudentFilter</filter-name>
    <filter-class>com.filter.StudentFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>StudentFilter</filter-name>
    <url-pattern>/leave/student/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>InstructorFilter</filter-name>
    <filter-class>com.filter.InstructorFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>InstructorFilter</filter-name>
    <url-pattern>/leave/teacher/instructor/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CollegeFilter</filter-name>
    <filter-class>com.filter.CollegeFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CollegeFilter</filter-name>
    <url-pattern>/leave/teacher/college/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>SchoolFilter</filter-name>
    <filter-class>com.filter.SchoolFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SchoolFilter</filter-name>
    <url-pattern>/leave/teacher/school/*</url-pattern>
  </filter-mapping>
  
  
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext*.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>